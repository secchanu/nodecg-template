{
	"name": "nodecg-template",
	"version": "0.0.0",
	"description": "",
	"license": "MIT",
	"scripts": {
		"start": "(cd ../.. && node index.js)",
		"build": "webpack",
		"clean": "del-cli bundle-analyzer dashboard extension graphics",
		"dev": "run-p dev:*",
		"dev:schema-types": "onchange schemas configschema.json -i -- nodecg schema-types -o src/nodecg/generated",
		"dev:tsc": "tsc -b src/browser src/extension -w --preserveWatchOutput",
		"dev:webpack": "cross-env WEBPACK_WATCH=true webpack",
		"format": "run-s format:prettier format:sort-package-json",
		"format:prettier": "prettier \"**/*.{ts,tsx,json,html,yml,css,scss,md}\" --check --write",
		"format:sort-package-json": "sort-package-json",
		"prod": "cross-env NODE_ENV=production run-s schema-types clean build",
		"schema-types": "del-cli src/nodecg/generated && nodecg schema-types -o src/nodecg/generated",
		"test": "run-s test:lint test:prettier schema-types test:types",
		"test:prettier": "prettier \"**/*.{ts,tsx,json,html,yml,css,scss,md}\" --check",
		"test:lint": "eslint --ext .ts .",
		"test:types": "tsc -b src/browser src/extension",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.20.2",
		"@types/lodash-es": "^4.17.6",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"@types/source-map-support": "^0.5.6",
		"@types/webpack-bundle-analyzer": "^4.6.0",
		"@types/webpack-env": "^1.18.0",
		"@types/webpack-node-externals": "^2.5.3",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"babel-loader": "^9.1.2",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.3",
		"del-cli": "^5.0.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"glob": "^8.1.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"lodash-es": "^4.17.21",
		"mini-css-extract-plugin": "^2.7.2",
		"modern-normalize": "^1.1.0",
		"nodecg-cli": "^8.6.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"prettier": "2.8.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sort-package-json": "^2.2.0",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"ts-nodecg": "^0.3.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"webpack": "^5.75.0",
		"webpack-bundle-analyzer": "^4.7.0",
		"webpack-cli": "^5.0.1",
		"webpack-merge": "^5.8.0",
		"webpack-node-externals": "^3.0.0",
		"webpackbar": "^5.0.2"
	},
	"nodecg": {
		"compatibleRange": "^1.0.0",
		"dashboardPanels": [
			{
				"name": "sample",
				"title": "サンプル",
				"width": 2,
				"headerColor": "#407dbf",
				"file": "sample.html"
			}
		],
		"graphics": [
			{
				"file": "sample.html",
				"width": 1920,
				"height": 1080,
				"singleInstance": false
			}
		]
	}
}
